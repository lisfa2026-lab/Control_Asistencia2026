{
  "version": 2,
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "static/$1"
    }
  ],
  "env": {
    "MONGO_URL": "@mongo_url",
    "DB_NAME": "lisfa_attendance",
    "JWT_SECRET": "@jwt_secret",
    "CORS_ORIGINS": "@cors_origins"
  }
}
